@echo OFF
@TITLE HiBuilder
@color 6
::@mode con cols=120 lines=30
@echo -Start HiBuilder ...
@echo ...
:: ------------------------------------------------------------------------------

:: ------------------------------------------------------------------------------
::Common Settings
:: ------------------------------------------------------------------------------
SET SCRIPT_TOP_PATH=%~f0
SET SCRIPT_TOP_PATH=%~dp0
SET WORK_TOP_PATH=%SCRIPT_TOP_PATH%..
SET HB_PE_FILE_PATH=%WORK_TOP_PATH%\target\hibuilder\bin
SET HB_PE_FILE_NAME=HiBuilder.exe
SET HB_PE_FILE=%HB_PE_FILE_PATH%\%HB_PE_FILE_NAME%

:: ------------------------------------------------------------------------------
::Check environment
:: ------------------------------------------------------------------------------
IF not EXIST "%HB_PE_FILE%" (@echo ***error: OneBuilder dependent environment is bad, please setup OneBuilder dependent toolset.&&echo    ***error: fail to find %HB_PE_FILE%&&goto ERR)

:: ------------------------------------------------------------------------------
::launch HiBuilder
:: ------------------------------------------------------------------------------
start /D "%HB_PE_FILE_PATH%" %HB_PE_FILE_NAME%

:: ------------------------------------------------------------------------------
::normal exit
:: ------------------------------------------------------------------------------
goto :eof

:: ------------------------------------------------------------------------------
:: error exit
:: ------------------------------------------------------------------------------
:ERR
@COLOR C
@echo -
@echo Press any key to exit.
pause >NUL
:: ------------------------------------------------------------------------------
